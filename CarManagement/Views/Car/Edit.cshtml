@model CarManagement.Models.Car

@{
    ViewData["Title"] = "Edit Car";
}

<h4>Edit Car</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="szCarId" class="control-label"></label>
                <input asp-for="szCarId" class="form-control" readonly/>
                <span asp-validation-for="szCarId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="szCarName" class="control-label"></label>
                <input asp-for="szCarName" class="form-control" />
                <span asp-validation-for="szCarName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="szCarModel" class="control-label"></label>
                <select asp-for="szCarModel" class="form-control">
                    <option value="Hybrid">Hybrid</option>
                    <option value="Sedan">Sedan</option>
                    <option value="SUV">SUV</option>
                    <option value="MPV">MPV</option>
                </select>                
                <span asp-validation-for="szCarModel" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="button" value="Back" class="btn btn-primary" onclick="@("window.location.href='" + @Url.Action("Index", "Car") + "'");"/>
                <input type="submit" value="Save" class="btn btn-success" />
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
